    },
  ],
  // ============================================================================
  // OTHER EXTENSIONS
  // ============================================================================
  "update.showReleaseNotes": true,
  "workbench.iconTheme": "Monokai Pro Light Icons",
  "settingsSync.ignoredExtensions": [],
}
