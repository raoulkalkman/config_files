UseColor: true

Checks: [
    # Enable the following check groups:
    "clang-diagnostic-*",
    "clang-analyzer-*",
    "bugprone-*",
    "performance-*",
    "readability-*",
    "misc-*",
    "modernize-*",
    "cppcoreguidelines-*",

    # Disable the following (individual) checks:
    "-cppcoreguidelines-avoid-magic-numbers", # Duplicate, already covered by `readability-magic-numbers`.
    "-clang-analyzer-security.insecureAPI.DeprecatedOrUnsafeBufferHandling", # Triggered by not using `*_s` functions which our libc does not support.
  ]

CheckOptions:
  # Ignore code generated by macros in cognitive complexity calculations.
  readability-function-cognitive-complexity.IgnoreMacros: true

  # Allow magic numbers in the range 0-8, which are used as indices in various places.
  readability-magic-numbers.IgnoredIntegerValues: "0;1;2;3;4;5;6;7;8"

  # Allow a maximum of 2 easily swappable parameters in functions.
  bugprone-easily-swappable-parameters.MinimumLength: 3

  # Allow non-private member variables in classes if all member variables are public.
  misc-non-private-member-variables-in-classes.IgnoreClassesWithAllMemberVariablesBeingPublic: true

  # Exclude some patterns from the identifier length check.
  readability-identifier-length.IgnoredVariableNames: "^(id|ev|on)$"
  readability-identifier-length.IgnoredParameterNames: "^([n]|id|ev|on)$"
  readability-identifier-length.IgnoredLoopCounterNames: "^([ijk_]|id|ev|on)$"
  readability-identifier-length.IgnoredExceptionVariableNames: "^([e]|id|ev|on)$"
